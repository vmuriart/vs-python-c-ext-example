# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_size = 4
end_of_line = crlf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# config files
[*.{ini,yaml,yml}]
indent_size = 2

# XML project files
[*.{csproj,vcxproj}]
indent_size = 2
insert_final_newline = false

# Solution files
[*.sln]
indent_style = tab

# Visual Studio files
[*.{cs,csproj,sln,cpp,h}]
charset = utf-8-bom
